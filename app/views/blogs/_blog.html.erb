<div id="<%= dom_id blog %>">
  <p>
    <strong>Title:</strong>
    <%= blog.title %>
  </p>

  <% if blog.user %>
    <div>
          <%= link_to "Written By: #{blog.user.username}", blog.user %>
    </div>
  <% end %>

  <p>
    <strong>Body:</strong>
    <%= blog.body %>
  </p>

  <p>
    <strong>Categories:</strong>
    <% blog.categories.each do |category| %>
      <p><%= category.name %></p>
    <% end %>
  </p>

  <p>
    <strong>Image path:</strong>
    <%= image_tag blog.image_path %>
  </p>

</div>
